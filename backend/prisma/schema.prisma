generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  activities Activity[]
  createdAt DateTime   @default(now())
}

model Activity {
  id        String   @id @default(uuid())
  title     String
  category  String
  startTime DateTime
  endTime   DateTime
  date      DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
